<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">

    <RelativeLayout
        android:id="@+id/mine_data_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#F7F7F7">

        <ImageView
            android:id="@+id/mine_data_title_back"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/mine_data_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/noto_sans"
            android:text="完善资料（1/2）"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/mine_data_title_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"
            android:clickable="true"
            android:fontFamily="@font/noto_sans"
            android:text="下一步"
            android:textColor="#007AFF" />
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mine_data_avatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@id/mine_data_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/photo" />

    <TextView
        android:id="@+id/mine_avatar_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mine_data_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/noto_sans"
        android:text="请上传头像"
        android:textColor="#121212" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mine_data_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mine_data_avatar"
        android:layout_marginTop="53dp"></android.support.v7.widget.RecyclerView>
</RelativeLayout>