<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp">
    <RelativeLayout
        android:id="@+id/smalltitle"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <View
            android:id="@+id/mine_resume_spot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/mine_resume_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:textColor="#121212"
            android:textSize="16sp"
            android:layout_toRightOf="@id/mine_resume_spot"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/mine_resume_et"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#FFFFFF"
        android:clickable="true"
        android:layout_below="@id/smalltitle"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:lineSpacingExtra="20sp"
        android:inputType="textMultiLine"/>
    <RelativeLayout
        android:layout_below="@id/mine_resume_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">
    <TextView
        android:id="@+id/mine_resume_number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#9E9E9E"
        android:textSize="12sp"
        android:fontFamily="@font/noto_sans"
        android:gravity="right|center_vertical"/>
    </RelativeLayout>
</RelativeLayout>