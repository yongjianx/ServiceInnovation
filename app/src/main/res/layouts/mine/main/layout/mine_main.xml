<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">
<RelativeLayout
    android:id="@+id/mine_part1"
    android:layout_width="match_parent"
    android:layout_height="211dp"
    android:background="#FFFFFF">
    <ImageView
        android:id="@+id/mine_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/setting"
        android:layout_alignParentRight="true" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mine_avatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请登陆"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_below="@id/mine_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/mine_part2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:layout_below="@id/mine_part1"
        android:layout_marginTop="8dp"
        android:onClick="onClick"
        android:clickable="true">
        <ImageView
            android:id="@+id/mine_pic1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_data"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textColor="#121212"
            android:textSize="16sp"
            android:layout_toRightOf="@id/mine_pic1"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/mine_data_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_icon"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mine_part3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:layout_below="@id/mine_part2"
        android:layout_marginTop="3dp"
        android:onClick="onClick"
        android:clickable="true">
        <ImageView
            android:id="@+id/mine_pic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/resume"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的简历"
            android:textColor="#121212"
            android:textSize="16sp"
            android:layout_toRightOf="@id/mine_pic2"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/mine_resume_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_icon"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mine_part4"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:layout_below="@id/mine_part3"
        android:layout_marginTop="3dp"
        android:onClick="onClick"
        android:clickable="true">
        <ImageView
            android:id="@+id/mine_pic3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/subscribe"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订阅"
            android:textColor="#121212"
            android:textSize="16sp"
            android:layout_toRightOf="@id/mine_pic3"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/mine_sub_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_icon"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mine_part5"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:layout_below="@id/mine_part4"
        android:layout_marginTop="3dp"
        android:onClick="onClick"
        android:clickable="true">
        <ImageView
            android:id="@+id/mine_pic4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my_info"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的消息"
            android:textColor="#121212"
            android:textSize="16sp"
            android:layout_toRightOf="@id/mine_pic4"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/mine_info_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/next_icon"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>